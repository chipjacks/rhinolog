<div class="navbar">
  <div class="navbar-inner">
    <div class="container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

       <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href=<%= root_path %>> <%= image_tag "logo.png" %></a>

      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse">
        <% if signed_in? && !controller.to_s.start_with?("#<Devise") %>
          <ul class="nav">
            <li class= <%="active" if current_page?(root_path)%> >
              <a href="/" class="nav-view-text">WEEK</a>
            </li>
            <li class= <%="active" if controller.controller_name == 'runs' && controller.action_name == 'index' %> >
              <a href="/month" class="nav-view-text">MONTH</a>
            </li>
          </ul>
        <% end %>
        <ul class="nav pull-right">
        <% if signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle nav-account-text"
            data-toggle="dropdown"
            href="#">
              ACCOUNT
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user.email, :controller => "devise/registrations", :action => "edit" %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%= form_for resource, as: resource_name, :url => session_path(resource_name), :html => { :class => "navbar-form pull-left" } do |f| %>
            <%= f.text_field :email, placeholder: 'Email', class: 'span2', 
                      id: 'signinform' %>

            <%= f.password_field :password, placeholder: 'Password', 
                      class: 'span2', id: 'signinform' %>

            <%= f.submit "Sign In", class: "btn" %>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
