<% if user_signed_in? %>
  	Signed in as <strong><%= current_user.email %></strong>.
  	<%= link_to 'Edit profile', edit_user_registration_path %> |
  	<%= link_to "Sign out", destroy_user_session_path, method: :delete %>
  	<h1><%= base_title %></h1>
  	<table class="table">
  		<thead>
  			<tr>
  				<th>Date</th>
  				<th>Distance</th>
  				<th>Time</th>
  				<th>Pace</th>
  		</thead>
  		<%= render partial: 'shared/run_feed', collection: @runs %>
  	</table>
  	<%= simple_form_for Run.new do |f| %>
  	  <%= f.error_notification %>

  	  <div class="form-inputs">
  	    <%= f.input :date, :required => true, :autofocus => true %>
  	    <%= f.input :mins, :required => true %>
  	    <%= f.input :distance, :required => true %>
  	    <%= f.input :pace, :required => true %>
  	  </div>

  	  <div class="form-actions">
  	    <%= f.button :submit, "Deposit" %>
  	  </div>
  	<% end %>
  <% else %>
    <div class="hero-unit">
    	<h1><%= base_title %></h1>
    	<p>
    		Welcome to <%= base_title %>. Open an account to get started.
    	</p>
    	<div class="btn-group">
    		<%= link_to "Sign up", new_user_registration_path, class: "btn btn-large btn-primary" %>
    		<%= link_to "Sign in", new_user_session_path, class: "btn btn-large" %>
    	</div>
    </div>
  <% end %>
