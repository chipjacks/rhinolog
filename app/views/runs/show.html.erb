<% provide(:title, @run.date) %>

	<div class="span2">
    <b>Date:</b>
    <%= @run.date %>
  </div>
  <div class="span2">
    <b>Time:</b>
    <%= best_in_place @run, :time_in_secs, inner_class: 'rundata' %>
  </div>
  <div class="span2">
    <b>Distance:</b>
    <%= best_in_place @run, :distance %>
  </div>
  <div class="span2">
    <b>Pace:</b>
    <%= best_in_place @run, :pace_in_secs %>
  </div>