<%= render partial: 'shared/oneline_run_form' %>

<div id="runs">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @runs_by_date[date] %>
      <ul>
        <% @runs_by_date[date].each do |run| %>
          <li><%= link_to run.distance, run %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>