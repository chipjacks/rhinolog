<div class="hero-unit">
	<div class="row">
		<div class="span10">
    	<%= image_tag "bigtitle.png"%>
    </div>
  </div>
  <div class="row">
    <div class="span10">
	    <%= link_to "SIGN UP", new_user_registration_path, class: "btn btn-large btn-primary btn-block btn-inverse", id: "signupbtn" %>
	  </div>
	</div>
	<h2 id="subtitle">
		Fast and simple running mileage logging.
	</h2>
</div>

<div class="container">
	<div class="row">
		<div class="span4 offset1">
			<h1>
				Features:
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="span10 offset1">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="span4 offset1">
			<h3 style='text-align: right'>
				Don't like sweating all over your keyboard?
			</h3>
			<p class="lead" style='text-align: right'>
				Send a text to (208)35RHINO instead
			</p>
		</div>
		<div class="span4 offset1">
			<%= image_tag "celltext.png", id: 'cell-image', class: 'feature-image'%>
		</div>
	</div>
	<div class="row">
		<div class="span10 offset1">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="span4 offset1">
			<%= image_tag "week_view.png", class: 'feature-image', id: 'week-view'%>
		</div>
		<div class="span4 offset1">
			<h3>
				Run hard, log easy
			</h3>
			<p class="lead">
				Simple and intuitive user interface
			</p>
		</div>
	</div>
	<div class="row">
		<div class="span10 offset1">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="span4 offset1">
			<h3 style='text-align: right'>
				RhinoGrid
			</h3>
			<p class="lead" style='text-align: right'>
				Easily track and visualize feel and effort data
			</p>
		</div>
		<div class="span4 offset1">
			<%= image_tag "rhinogrid.png", class: 'feature-image', id: 'rhinogrid'%>
		</div>
	</div>
	<div class="row">
		<div class="span10 offset1">
			<hr>
		</div>
	</div>
	<div class="row">
